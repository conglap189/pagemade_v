{
  "id": "portfolio-creative",
  "name": "Creative Portfolio", 
  "description": "Modern portfolio website cho designer, developer, và creative professionals",
  "category": "portfolio",
  "preview_image": "assets/preview.jpg",
  "difficulty": "easy",
  "tags": ["creative", "portfolio", "showcase", "modern"],
  "pages": [
    {
      "name": "Homepage",
      "file": "index.html",
      "is_homepage": true,
      "description": "Portfolio homepage with hero, projects showcase, and contact",
      "customizable_fields": [
        {
          "id": "full_name",
          "label": "Họ và Tên",
          "type": "text", 
          "default": "Your Full Name",
          "placeholder": "VD: Nguyễn Văn Nam"
        },
        {
          "id": "profession",
          "label": "Nghề Nghiệp",
          "type": "text",
          "default": "Creative Professional", 
          "placeholder": "VD: UI/UX Designer"
        },
        {
          "id": "bio_text",
          "label": "Giới Thiệu Bản Thân",
          "type": "textarea",
          "default": "I'm a passionate creative professional...",
          "placeholder": "VD: Tôi là một designer với 5 năm kinh nghiệm..."
        },
        {
          "id": "contact_email",
          "label": "Email Liên Hệ", 
          "type": "email",
          "default": "hello@yourname.com",
          "placeholder": "VD: nam.designer@gmail.com"
        },
        {
          "id": "linkedin_url",
          "label": "LinkedIn URL",
          "type": "url",
          "default": "https://linkedin.com/in/yourprofile",
          "placeholder": "VD: https://linkedin.com/in/nguyenvannam"
        }
      ]
    }
  ],
  "color_schemes": [
    {
      "name": "Dark Professional",
      "primary": "#1a1a1a",
      "secondary": "#333333", 
      "accent": "#00d4ff",
      "background": "#0a0a0a",
      "text": "#ffffff"  
    },
    {
      "name": "Warm Creative",
      "primary": "#ff6b35",
      "secondary": "#ff8c42",
      "accent": "#ffd23f", 
      "background": "#fff8f0",
      "text": "#2d2d2d"
    },
    {
      "name": "Minimal Gray",
      "primary": "#2d3748", 
      "secondary": "#4a5568",
      "accent": "#ed8936",
      "background": "#f7fafc", 
      "text": "#2d3748"
    }
  ]
}