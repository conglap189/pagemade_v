{% extends "base.html" %}

{% block title %}{{ site.title }} Pagemade {% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>{{ site.title }}</h2>
                    <p class="text-muted">
                        <i class="fas fa-link"></i> {{ site.subdomain }}.pagemade.site
                        <span class="ms-3">
                            <i class="fas fa-calendar"></i> Tạo ngày {{ site.created_at.strftime('%d/%m/%Y') }}
                        </span>
                    </p>
                </div>
                <a href="{{ url_for('main.new_page', site_id=site.id) }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Thêm Page
                </a>
            </div>

            {% if site.description %}
            <div class="card mb-4">
                <div class="card-body">
                    <h6>Mô tả:</h6>
                    <p class="text-muted">{{ site.description }}</p>
                </div>
            </div>
            {% endif %}

            <!-- Pages List -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Pages ({{ pages|length }})</h5>
                    <a href="{{ url_for('main.new_page', site_id=site.id) }}" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus"></i> Thêm Page
                    </a>
                </div>
                <div class="card-body">
                    {% if pages %}
                        <div class="row">
                            {% for page in pages %}
                            <div class="col-md-6 mb-3">
                                <div class="card page-card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="card-title mb-0">{{ page.title }}</h6>
                                            {% if page.is_published %}
                                                <span class="published-badge">Published</span>
                                            {% else %}
                                                <span class="draft-badge">Draft</span>
                                            {% endif %}
                                        </div>
                                        
                                        {% if page.description %}
                                        <p class="card-text text-muted small">{{ page.description }}</p>
                                        {% endif %}
                                        
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                Template: {{ page.template|title }}
                                            </small>
                                            <small class="text-muted">
                                                {{ page.updated_at.strftime('%d/%m/%Y') }}
                                            </small>
                                        </div>
                                        
                                        <div class="mt-3 d-flex gap-2">
                                            <a href="{{ url_for('main.editor', page_id=page.id) }}" class="btn btn-primary btn-sm">
                                                <i class="fas fa-edit"></i> Chỉnh sửa
                                            </a>
                                            
                                            {% if page.is_published %}
                                                <a href="{{ url_for('main.view_page', subdomain=site.subdomain, page_id=page.id) }}" 
                                                   class="btn btn-success btn-sm" target="_blank">
                                                    <i class="fas fa-external-link-alt"></i> Xem
                                                </a>
                                            {% else %}
                                                <button class="btn btn-outline-success btn-sm" onclick="publishPage({{ page.id }})">
                                                    <i class="fas fa-upload"></i> Publish
                                                </button>
                                            {% endif %}
                                            
                                            <button class="btn btn-outline-danger btn-sm" onclick="deletePage({{ page.id }})">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                            <h5>Chưa có page nào</h5>
                            <p class="text-muted">Tạo page đầu tiên để bắt đầu xây dựng nội dung</p>
                            <a href="{{ url_for('main.new_page', site_id=site.id) }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Tạo Page Đầu Tiên
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h6><i class="fas fa-info-circle"></i> Thông tin Site</h6>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Tên:</dt>
                        <dd class="col-sm-8">{{ site.title }}</dd>
                        
                        <dt class="col-sm-4">URL:</dt>
                        <dd class="col-sm-8">
                            <a href="http://{{ site.subdomain }}.pagemade.site" target="_blank" class="text-decoration-none">
                                {{ site.subdomain }}.pagemade.site
                                <i class="fas fa-external-link-alt fa-sm"></i>
                            </a>
                        </dd>
                        
                        <dt class="col-sm-4">Pages:</dt>
                        <dd class="col-sm-8">{{ pages|length }}</dd>
                        
                        <dt class="col-sm-4">Published:</dt>
                        <dd class="col-sm-8">
                            {%- set published_count = pages|selectattr('is_published')|list|length -%}
                            {{ published_count }}
                        </dd>
                        
                        <dt class="col-sm-4">Tạo:</dt>
                        <dd class="col-sm-8">{{ site.created_at.strftime('%d/%m/%Y %H:%M') }}</dd>
                        
                        <dt class="col-sm-4">Cập nhật:</dt>
                        <dd class="col-sm-8">{{ site.updated_at.strftime('%d/%m/%Y %H:%M') }}</dd>
                    </dl>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="fas fa-tools"></i> Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ url_for('main.new_page', site_id=site.id) }}" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm Page
                        </a>
                        <a href="{{ url_for('main.dashboard') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Về Dashboard
                        </a>
                        <button class="btn btn-outline-danger" onclick="deleteSite({{ site.id }})">
                            <i class="fas fa-trash"></i> Xóa Site
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_js %}
<script>
function publishPage(pageId) {
    if (confirm('Bạn có muốn publish page này?')) {
        const btn = event.target.closest('button');
        btn.disabled = true;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Publishing...';
        
        fetch(`/api/pages/${pageId}/publish`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.message) {
                location.reload();
            } else {
                alert('Có lỗi xảy ra khi publish page');
                btn.disabled = false;
                btn.innerHTML = '<i class="fas fa-upload"></i> Publish';
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Có lỗi xảy ra khi publish page');
            btn.disabled = false;
            btn.innerHTML = '<i class="fas fa-upload"></i> Publish';
        });
    }
}

function deletePage(pageId) {
    if (confirm('Bạn có chắc muốn xóa page này?')) {
        fetch(`/api/pages/${pageId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.message) {
                location.reload();
            } else {
                alert('Có lỗi xảy ra khi xóa page');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Có lỗi xảy ra khi xóa page');
        });
    }
}

function deleteSite(siteId) {
    if (confirm('Bạn có chắc muốn xóa site này? Tất cả pages trong site cũng sẽ bị xóa.')) {
        fetch(`/api/sites/${siteId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.message) {
                window.location.href = '/dashboard';
            } else {
                alert('Có lỗi xảy ra khi xóa site');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Có lỗi xảy ra khi xóa site');
        });
    }
}
</script>
{% endblock %}